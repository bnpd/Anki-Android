<!-- OpenAI Preferences -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/pref_cat_openai"
    android:key="@string/pref_openai_screen_key">

    <EditTextPreference
        android:key="@string/pref_openai_api_key"
        android:title="@string/openai_api_key_title"
        android:summary="@string/openai_api_key_summary"
        android:inputType="textPassword"
        app:useSimpleSummaryProvider="false"/>

    <EditTextPreference
        android:key="@string/pref_openai_organization_key"
        android:title="@string/openai_organization_title"
        android:summary="@string/openai_organization_summary"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        android:key="@string/pref_openai_project_key"
        android:title="@string/openai_project_title"
        android:summary="@string/openai_project_summary"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        android:key="@string/pref_openai_card_lint_instructions_key"
        android:title="@string/pref_openai_card_lint_instructions_title"
        android:summary="@string/pref_openai_card_lint_instructions_summary"
        android:defaultValue="@string/pref_openai_card_lint_instructions_default"
        app:useSimpleSummaryProvider="false"/>

</PreferenceScreen>